{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@customTypes/*": ["types/*"],
      "@middlewares/*": ["middlewares/*"]
    },
    "rootDir": ".",          // where your TS files are
    "outDir": "dist",        // compiled JS goes here
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
